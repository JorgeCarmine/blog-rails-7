<div class="card mt-5 px-5 py-3">
    <h3 class="text-uppercase"><%= article.title %></h3>
    <p class="text-secondary">Author: <%= article.user.email %></p>
    <p class="text-secondary"><%= article.created_at %></p>
    <div class="row">
        <div class="col-2">
            <%= link_to 'View more', article %>
        </div>
        <div class="col-2">
            <% if user_signed_in? %>
                <%= button_to 'Delete', articles_destoy_path(article), method: :delete,  class: 'btn btn-danger btn-sm' %>
            <% end %>
        </div>
    </div>
</div>